<html>
<body>
    <div>
        <form method="post">
            <input type="text" name="text" placeholder="Введите сообщение" />
            <input type="text" name="tag" placeholder="Тег" />
            <button type="submit">Отправить</button>
        </form>
    </div>
    <div>Список сообщений</div>
    {{#messages}}
    <div>
        <b>{{id}}</b>
        <b>{{name}}</b>
        <span>{{text}}</span>
        <b>{{tag}}</b>
    </div>
    {{/messages}}
</body>
</html>